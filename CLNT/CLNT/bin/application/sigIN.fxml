<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.sigINController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="420.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#a81010" layoutX="129.0" layoutY="118.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign-In">
               <font>
                  <Font name="System Bold Italic" size="44.0" />
               </font></Text>
            <Text layoutX="24.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hello, User!" />
            <Text fill="#a81010" layoutX="86.0" layoutY="171.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User ID:">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Text>
            <Text fill="#a81010" layoutX="86.0" layoutY="206.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Text>
            <TextField fx:id="userID" alignment="CENTER" layoutX="184.0" layoutY="147.0" promptText="UserID" />
            <TextField fx:id="pass" alignment="CENTER" layoutX="184.0" layoutY="185.0" promptText="Password" />
            <Button layoutX="193.0" layoutY="233.0" mnemonicParsing="false" onAction="#loginFunc" text="Login" />
            <Button layoutX="14.0" layoutY="349.0" mnemonicParsing="false" onAction="#backGui" text="Back" />
            <Button layoutX="339.0" layoutY="349.0" mnemonicParsing="false" onAction="#exitGui" text="Exit" />
            <Text fx:id="NotFound" fill="RED" layoutX="161.0" layoutY="291.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Not Found !" visible="false">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
