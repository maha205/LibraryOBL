<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ResetPasswordRequestController">
   <center>
      <AnchorPane prefHeight="475.0" prefWidth="581.0" BorderPane.alignment="CENTER">
         <children>
            <Text layoutX="6.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hello, User!" />
            <Text fill="#8022e5" layoutX="82.0" layoutY="114.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reset Password Request">
               <font>
                  <Font name="System Bold Italic" size="37.0" />
               </font>
            </Text>
            <Text fx:id="EnterEmai" fill="#8022e5" layoutX="72.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your E-mail address:">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
            <TextField fx:id="inputTxt" layoutX="317.0" layoutY="179.0" />
            <Button layoutX="285.0" layoutY="238.0" mnemonicParsing="false" onAction="#SendEmail" text="OK" />
            <Button layoutX="14.0" layoutY="430.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            <Text fx:id="EnterCode" fill="#8022e5" layoutX="203.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Code:" visible="false">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
            <Text fx:id="enterID" fill="#8022e5" layoutX="71.0" layoutY="161.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter you User ID:">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
            <TextField fx:id="UserID" layoutX="317.0" layoutY="138.0" />
            <Text fx:id="UserNotFound" fill="RED" layoutX="245.0" layoutY="303.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Not Found !" visible="false">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="newPass" fill="#8022e5" layoutX="152.0" layoutY="161.0" strokeType="OUTSIDE" strokeWidth="0.0" text="New Password:" visible="false">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
            <Text fx:id="assertPass" fill="#8022e5" layoutX="157.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Assert Password:" visible="false">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
            <Text fx:id="successful" fill="#06ae14" layoutX="182.0" layoutY="328.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reser Password successful" visible="false">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="errorInputPass" fill="RED" layoutX="231.0" layoutY="304.0" strokeType="OUTSIDE" strokeWidth="0.0" text="check your input!" visible="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
