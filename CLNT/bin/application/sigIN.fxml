            </Text>
            <Text fill="#2cccf8" layoutX="45.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <TextField fx:id="userID" alignment="CENTER" layoutX="148.0" layoutY="242.0" promptText="UserID" />
